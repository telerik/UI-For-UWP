<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Telerik.UI.Xaml.Controls.Grid"
    xmlns:localPrimitives="using:Telerik.UI.Xaml.Controls.Grid.Primitives"
    xmlns:localView="using:Telerik.UI.Xaml.Controls.Grid.View"
    xmlns:primitives="using:Telerik.UI.Xaml.Controls.Primitives"
    xmlns:primitivesCommon="using:Telerik.UI.Xaml.Controls.Primitives.Common"
    xmlns:input="using:Telerik.UI.Xaml.Controls.Input"
    xmlns:dataControls ="using:Telerik.UI.Xaml.Controls.Data"
    xmlns:core="using:Telerik.Core"
    >

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Telerik.UI.Xaml.Grid.UWP/Themes/ThemeResourcesDark.xaml"/>
                <ResourceDictionary Source="{CustomResource DarkResourcesPath}"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Telerik.UI.Xaml.Grid.UWP/Themes/ThemeResourcesLight.xaml"/>
                <ResourceDictionary Source="{CustomResource LightResourcesPath}"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Key="HighContrast">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Telerik.UI.Xaml.Grid.UWP/Themes/ThemeResourcesHighContrast.xaml"/>
                <ResourceDictionary Source="{CustomResource HighContrastResourcesPath}"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Telerik.UI.Xaml.Primitives.UWP/Themes/SharedResources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <localView:GroupPositionToAlignmentConverter x:Key="PositionToAlignmentConverter" />
    <core:BoolToVisibilityConverter x:Key="VisibilityConverter" />
    <localView:DataOperationsButtonTextConverter x:Key="DataOperationsButtonTextConverter" />
    <localView:BorderThicknessToMarginConverter x:Key="BorderThicknessToMarginConverter" />
    <localView:DataOperationsButtonOpacityConverter x:Key="DataOperationsButtonOpacityConverter" />

    <Style TargetType="localPrimitives:DataGridFilteringFlyoutExpandButton">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="16,0"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="BorderThickness" Value="0 2 0 0"/>
        <Setter Property="Background" Value="{ThemeResource TelerikGridFilterFlyoutExpandButtonBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGridFilterFlyoutExpandButtonBorderBrush}"/>
        <Setter Property="PointerOverBackgroundBrush" Value="{ThemeResource TelerikGridFilterFlyoutExpandButtonPointerOverBackgroundBrush}"/>
        <Setter Property="PointerOverBorderBrush" Value="{ThemeResource TelerikGridFilterFlyoutExpandButtonPointerOverBorderBrush}"/>
        <Setter Property="PressedBackgroundBrush" Value="{ThemeResource TelerikGridFilterFlyoutExpandButtonPressedBackgroundBrush}"/>
        <Setter Property="PressedBorderBrush" Value="{ThemeResource TelerikGridFilterFlyoutExpandButtonPressedBorderBrush}"/>
        <Setter Property="Template" Value="{StaticResource InlineButtonControlTemplate}"/>
    </Style>

    <Style TargetType="localPrimitives:DataGridFilteringFlyoutApplyFilterButton" BasedOn="{StaticResource GridServiceButtonStyle}">
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0,16,0,0"/>
    </Style>

    <Style TargetType="localPrimitives:DataGridFilteringFlyoutClearFilterButton">
        <Setter Property="BorderThickness" Value="2 2 0 0"/>
        <Setter Property="Background" Value="{ThemeResource TelerikGridFilterFlyoutClearButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TelerikGridFilterFlyoutClearButtonForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGridFilterFlyoutClearButtonBorderBrush}"/>

        <Setter Property="PointerOverBackgroundBrush" Value="{ThemeResource TelerikGridFilterFlyoutClearButtonPointerOverBackgroundBrush}"/>
        <Setter Property="PointerOverForegroundBrush" Value="{ThemeResource TelerikGridFilterFlyoutClearButtonPointerOverForegroundBrush}"/>
        <Setter Property="PointerOverBorderBrush" Value="{ThemeResource TelerikGridFilterFlyoutClearButtonPointerOverBorderBrush}"/>

        <Setter Property="PressedBackgroundBrush" Value="{ThemeResource TelerikGridFilterFlyoutClearButtonPressedBackgroundBrush}"/>
        <Setter Property="PressedForegroundBrush" Value="{ThemeResource TelerikGridFilterFlyoutClearButtonPressedForegroundBrush}"/>
        <Setter Property="PressedBorderBrush" Value="{ThemeResource TelerikGridFilterFlyoutClearButtonPressedBorderBrush}"/>

        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="Padding" Value="16,0"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Template" Value="{StaticResource InlineButtonControlTemplate}"/>
        <Setter Property="local:GridLocalizationManager.Key" Value="ClearFilter"/>
        <Setter Property="local:GridLocalizationManager.PropertyName" Value="Content"/>
    </Style>

    <Style TargetType="localPrimitives:DataGridFlyoutHeaderCancelButton">
        <Setter Property="Background" Value="{ThemeResource TelerikGridFlyoutHeaderCancelButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TelerikGridFlyoutHeaderCancelButtonForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGridFlyoutHeaderCancelButtonBorderBrush}"/>
        <Setter Property="PointerOverBackgroundBrush" Value="{ThemeResource TelerikGridFlyoutHeaderCancelButtonPointerOverBackgroundBrush}"/>
        <Setter Property="PointerOverForegroundBrush" Value="{ThemeResource TelerikGridFlyoutHeaderCancelButtonPointerOverForegroundBrush}"/>
        <Setter Property="PointerOverBorderBrush" Value="{ThemeResource TelerikGridFlyoutHeaderCancelButtonPointerOverBorderBrush}"/>
        <Setter Property="PressedBackgroundBrush" Value="{ThemeResource TelerikGridFlyoutHeaderCancelButtonPressedBackgroundBrush}"/>
        <Setter Property="PressedForegroundBrush" Value="{ThemeResource TelerikGridFlyoutHeaderCancelButtonPressedForegroundBrush}"/>
        <Setter Property="PressedBorderBrush" Value="{ThemeResource TelerikGridFlyoutHeaderCancelButtonPressedBorderBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Template" Value="{StaticResource InlineButtonControlTemplate}"/>
        <Setter Property="local:GridLocalizationManager.Key" Value="Cancel"/>
        <Setter Property="local:GridLocalizationManager.PropertyName" Value="Content"/>
    </Style>

    <Style TargetType="localPrimitives:ColumnHeaderDataOperationsButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource TelerikGridColumnDataOperationsButtonForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundTransparentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="UseSystemFocusVisuals" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TelerikGridColumnDataOperationsButtonPointerOverForegroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="Icon">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TelerikGridColumnDataOperationsButtonPointerOverForegroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TelerikGridColumnDataOperationsButtonPressedForegroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="Icon">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TelerikGridColumnDataOperationsButtonPressedForegroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <PointerDownThemeAnimation Storyboard.TargetName="RootGrid"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ContentPresenter">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledTransparentBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Margin="3">
                            <Grid Margin="{TemplateBinding Padding}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Margin="0,0,5,0" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" x:Name="Icon" Text="{Binding IconText, RelativeSource={RelativeSource Mode=TemplatedParent}}" Foreground="{TemplateBinding Foreground}" />
                                <ContentPresenter Grid.Column="1" x:Name="ContentPresenter" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" AutomationProperties.AccessibilityView="Raw" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTransitions="{TemplateBinding ContentTransitions}" Content="{TemplateBinding Content}" />
                            </Grid>
                        </Border>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="localPrimitives:DataGridDataOperationsControl">
        <Setter Property="Background" Value="{ThemeResource TelerikGridColumnDataOperationsControlBackgroundBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:DataGridDataOperationsControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="3" />
                        </Grid.RowDefinitions>
                        <Border BorderBrush="{ThemeResource TelerikGridColumnDataOperationsControlBorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid Background="{TemplateBinding Background}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <localPrimitives:ColumnHeaderDataOperationsButton Padding="0,7,0,7" Margin="20,9,0,9" IconText="&#xE71C;"
                                                                                  Opacity="{Binding CanFilter, Converter={StaticResource DataOperationsButtonOpacityConverter}}"
                                                                                  local:GridLocalizationManager.Key="DataOperationsButtonFilter"
                                                                                  local:GridLocalizationManager.PropertyName="Content"
                                                                                  Command="{Binding Command}" CommandParameter="Filter" />
                                <localPrimitives:ColumnHeaderDataOperationsButton Padding="0,7,0,7" Margin="20,9,0,9" IconText="&#xE8CB;"
                                                                                  Opacity="{Binding CanSort, Converter={StaticResource DataOperationsButtonOpacityConverter}}"
                                                                                  local:GridLocalizationManager.Key="DataOperationsButtonSort"
                                                                                  local:GridLocalizationManager.PropertyName="Content" 
                                                                                  Command="{Binding Command}" CommandParameter="Sort" Grid.Column="1" />
                                <localPrimitives:ColumnHeaderDataOperationsButton Padding="0,7,0,7" Margin="20,9,20,9" IconText="&#xE8C4;"
                                                                                  Opacity="{Binding CanGroup, Converter={StaticResource DataOperationsButtonOpacityConverter}}"
                                                                                  Content="{Binding Command.IsGrouped, Converter={StaticResource DataOperationsButtonTextConverter}}"
                                                                                  Command="{Binding Command}" CommandParameter="Group" Grid.Column="2" />
                            </Grid>
                        </Border>

                        <Border Opacity="{ThemeResource TelerikGridColumnDataOperationsControlOuterBorderOpacity}" Grid.Row="1" Background="{ThemeResource TelerikGridColumnDataOperationsControlOuterBorderBrush}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="localPrimitives:DataGridContentFlyout">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:DataGridContentFlyout">
                    <Border x:Name="PART_Content"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="primitivesCommon:InlineButton" x:Key="GridServiceButtonStyle">
        <Setter Property="AutomationProperties.Name" Value="Filter"/>
        <Setter Property="Background" Value="{ThemeResource TelerikGridServiceButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{ThemeResource TelerikGridServiceButtonForegroundBrush}"/>
        <Setter Property="PointerOverBackgroundBrush" Value="{ThemeResource TelerikGridServiceButtonPointerOverBackgroundBrush}"/>
        <Setter Property="PointerOverForegroundBrush" Value="{ThemeResource TelerikGridServiceButtonForegroundBrush}"/>
        <Setter Property="PressedBackgroundBrush" Value="{ThemeResource TelerikGridServiceButtonPressedBackgroundBrush}"/>
        <Setter Property="PressedForegroundBrush" Value="{ThemeResource TelerikGridServiceButtonPressedForegroundBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0" />
        <Setter Property="Template" Value="{StaticResource InlineButtonControlTemplate}"/>
    </Style>

    <Style TargetType="localPrimitives:RotatedContainer">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:RotatedContainer">
                    <ContentPresenter Content="{TemplateBinding Child}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="localPrimitives:DataGridCellFlyoutControl">
        <Setter Property="Background" Value="{ThemeResource TelerikGridCellFlyoutControlBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGridCellFlyoutControlBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="OuterBorderBrush" Value="{ThemeResource TelerikGridCellFlyoutControlOuterBorderBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:DataGridCellFlyoutControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" Child="{TemplateBinding Child}" />
                        <Border Opacity="{ThemeResource TelerikGridCellFlyoutControlOuterBorderOpacity}" Grid.Row="1" Height="3" Background="{TemplateBinding OuterBorderBrush}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="localPrimitives:FormEditorSaveButton" BasedOn="{StaticResource GridServiceButtonStyle}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{ThemeResource TelerikGridExternalEditorSaveButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TelerikGridExternalEditorSaveButtonForegroundBrush}"/>
        <Setter Property="PointerOverBackgroundBrush" Value="{ThemeResource TelerikGridExternalEditorSaveButtonPointerOverBackgroundBrush}"/>
        <Setter Property="PointerOverForegroundBrush" Value="{ThemeResource TelerikGridExternalEditorSaveButtonPointerOverForegroundBrush}"/>
        <Setter Property="PressedBackgroundBrush" Value="{ThemeResource TelerikGridExternalEditorSaveButtonPressedBackgroundBrush}"/>
        <Setter Property="PressedForegroundBrush" Value="{ThemeResource TelerikGridExternalEditorSaveButtonPressedForegroundBrush}"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Margin" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template" Value="{StaticResource InlineButtonControlTemplate}"/>
        <Setter Property="local:GridLocalizationManager.Key" Value="Save"/>
        <Setter Property="local:GridLocalizationManager.PropertyName" Value="Content"/>
    </Style>

    <Style TargetType="localPrimitives:DataGridFormEditor">
        <Setter Property="Background" Value="{ThemeResource TelerikGridExternalEditorBackgroundBrush}" />
        <Setter Property="Padding" Value="16,8,16,8" />
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGridFlyoutBorderBrush}"/>
        <Setter Property="HeaderStyle">
            <Setter.Value>
                <Style TargetType="localPrimitives:FlyoutHeaderControl">
                    <Setter Property="Content" Value="EDIT"/>
                    <Setter Property="ContentStyle">
                        <Setter.Value>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Icon" Value="&#xE104;"/>
                    <Setter Property="IconStyle">
                        <Setter.Value>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="FontFamily" Value="{ThemeResource SymbolThemeFontFamily}"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Margin" Value="0,0,5,0"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:DataGridFormEditor">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ShadowBorder">
                                <VisualState x:Name="LeftBorder">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement" Storyboard.TargetProperty="BorderThickness">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="2,0,0,0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ShadowElement" Storyboard.TargetProperty="(Grid.Column)">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="RightBorder">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement" Storyboard.TargetProperty="BorderThickness">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="0,0,2,0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ShadowElement" Storyboard.TargetProperty="(Grid.Column)">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="2"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="1" x:Name="BorderElement" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <localPrimitives:FlyoutHeaderControl Command="{TemplateBinding CancelCommand}" Style="{TemplateBinding HeaderStyle}"/>
                                <ScrollViewer Margin="{TemplateBinding Padding}" Grid.Row="1"
                                                  VerticalScrollBarVisibility="Auto"
                                                  VerticalScrollMode="Auto"
                                                  HorizontalScrollBarVisibility="Hidden"
                                                  HorizontalScrollMode="Disabled">
                                    <dataControls:RadDataForm VerticalAlignment="Top" BorderThickness="0"
                                                                      Style="{TemplateBinding DataFormStyle}" x:Name="PART_DataForm" 
                                                                      Item="{TemplateBinding Item}" CommitMode="Manual" />
                                </ScrollViewer>
                                <localPrimitives:FormEditorSaveButton Command="{TemplateBinding SaveCommand}" Grid.Row="2" />
                            </Grid>
                        </Border>
                        <Rectangle Width="3" x:Name="ShadowElement" Fill="{ThemeResource TelerikGridShadowBrush}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:RadDataGrid">
        <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
        <Setter Property="Foreground" Value="{ThemeResource TelerikGridForegroundBrush}"/>
        <Setter Property="Background" Value="{ThemeResource TelerikGridBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGridBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2,0,2,2"/>
        <Setter Property="GridLinesBrush" Value="{ThemeResource TelerikGridBorderBrush}"/>
        <Setter Property="AlternateRowBackground" Value="{ThemeResource TelerikGridAlternateRowBackgroundBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="100"/>
        <Setter Property="HideFlyoutOnBackButtonPressed" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:RadDataGrid">

                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                        <localPrimitives:DataGridRootPanel x:Name="PART_TableRoot">
                            <ScrollViewer x:Name="PART_ScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                                          HorizontalScrollMode="Auto" VerticalScrollMode="Auto" ZoomMode="Disabled" IsTabStop="False">
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top">

                                    <Canvas x:Name="PART_DecorationsHost"/>
                                    <localPrimitives:DataGridCellsPanel x:Name="PART_CellsHost" Background="#00000000" />
                                    <Canvas x:Name="PART_ScrollableAdornerHost"/>

                                </Grid>
                                <ScrollViewer.TopHeader>
                                    <localPrimitives:DataGridColumnHeaderPanel x:Name="PART_ColumnHeadersHost" ManipulationMode="All" Background="{TemplateBinding Background}"/>
                                </ScrollViewer.TopHeader>
                                <ScrollViewer.TopLeftHeader>
                                    <Canvas x:Name="PART_FrozenColumnHeadersHost" Background="{TemplateBinding Background}"/>
                                </ScrollViewer.TopLeftHeader>
                                <ScrollViewer.LeftHeader>
                                    <Grid>
                                        <Canvas x:Name="PART_FrozenDecorationsHost" Background="{TemplateBinding Background}"/>
                                        <Canvas x:Name="PART_FrozenColumnsHost" Background="#00000000"/>
                                        <Canvas x:Name="PART_GroupHeadersHost"/>
                                    </Grid>
                                </ScrollViewer.LeftHeader>
                            </ScrollViewer>

                            <localPrimitives:FrozenGroupsPanel x:Name="PART_HeadersHost" />
                            <localPrimitives:DataGridServicePanel Position="{TemplateBinding GroupPanelPosition}" x:Name="PART_ServicePanel" IsTabStop="False"/>
                            <localPrimitives:DataGridColumnReorderServicePanel x:Name="PART_ColumnReorderServicePanel" Margin="{Binding BorderThickness, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource BorderThicknessToMarginConverter}}" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed"/>
                            <Canvas x:Name="PART_AdornerHost" IsHitTestVisible="False"/>
                            <localPrimitives:DataGridContentFlyout x:Name="PART_GridFlyout" IsTabStop="False"/>
                        </localPrimitives:DataGridRootPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="localPrimitives:DataGridServicePanel">
        <Setter Property="Background" Value="{ThemeResource TelerikGridServiceColumnBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TelerikGridServiceColumnForegroundBrush}"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="-2,0,-2,-2"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:DataGridServicePanel">
                    <Border x:Name="LayoutRoot" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="NormalGrouped">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GlyphRotateTransform" Storyboard.TargetProperty="Angle">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="180"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Expanded">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GlyphRotateTransform" Storyboard.TargetProperty="Angle">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="BorderBrush">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGridFlyoutBorderBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Fill" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGridServiceColumnFlyoutBackgroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="DragHinting">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Fill" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGridServiceColumnActiveBackgroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGridServiceColumnActiveForegroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGridServiceColumnActiveForegroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="DropPossible">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Fill" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGridServiceColumnActiveBackgroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGridServiceColumnActiveForegroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGridServiceColumnActiveForegroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="BorderThickness">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="2"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="BorderBrush">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGridServiceColumnActiveForegroundBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="Position">
                                <VisualState x:Name="Left">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Center"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Center"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RotatedContainer" Storyboard.TargetProperty="RotationAngle">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="-90"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="MinWidth">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="210"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="-2,0,0,0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="BorderThickness">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="0,2,2,2"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyout" Storyboard.TargetProperty="ChildTransitions">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <TransitionCollection>
                                                        <PaneThemeTransition Edge="Left"/>
                                                    </TransitionCollection>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Bottom">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Left"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Left"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RotatedContainer" Storyboard.TargetProperty="RotationAngle">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <!--<ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="MinHeight">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="210"/>
                                        </ObjectAnimationUsingKeyFrames>-->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="BorderThickness">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="2,2,2,0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyout" Storyboard.TargetProperty="ChildTransitions">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <TransitionCollection>
                                                        <PaneThemeTransition Edge="Bottom"/>
                                                    </TransitionCollection>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2"/>
                            </Grid.ColumnDefinitions>
                            <Grid Background="{TemplateBinding Background}" x:Name="Fill">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1"/>
                                </Grid.ColumnDefinitions>
                                <Grid Margin="{TemplateBinding Padding}">
                                    <Image Source="{ThemeResource TelerikGridFilterFlyoutExpanderIcon}" Stretch="None"
                                               RenderTransformOrigin="0.5,0.5" x:Name="ExpandCollapseGlyph" VerticalAlignment="Top" Visibility="Collapsed">
                                        <Image.RenderTransform>
                                            <RotateTransform Angle="180" x:Name="GlyphRotateTransform"/>
                                        </Image.RenderTransform>
                                    </Image>
                                    <TextBlock x:Name="DragHintGlyph" FontFamily="{ThemeResource SymbolThemeFontFamily}" Text="&#xE169;"
                                             VerticalAlignment="Top" Visibility="Collapsed"/>
                                    <localPrimitives:RotatedContainer  HorizontalAlignment="Center" x:Name="RotatedContainer">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="DragHereText"/>
                                    </localPrimitives:RotatedContainer>
                                </Grid>
                                <Rectangle x:Name="InnerShadow" Fill="{ThemeResource TelerikGridInnerShadowBrush}" 
                                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1"/>
                            </Grid>
                            <Rectangle x:Name="OuterShadow" Fill="{ThemeResource TelerikGridShadowBrush}" 
                                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1"/>
                            <Border x:Name="Border" BorderThickness="2,2,0,2" Visibility="Collapsed" Grid.ColumnSpan="2"/>
                            <Popup x:Name="PART_GroupFlyout" IsLightDismissEnabled="True">
                                <localPrimitives:DataGridServicePanelGroupingFlyout VerticalAlignment="{Binding Position, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource PositionToAlignmentConverter}}" x:Name="PART_GroupFlyoutContent"/>
                            </Popup>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

